# DeepSeek MCP Bridge Performance Configuration
# Production-ready configuration with BLAZING FAST optimizations

# Environment
NODE_ENV=development
ENVIRONMENT=development

# DeepSeek API Configuration
# SECURITY WARNING: Never commit actual API keys to version control
# Use environment variables or secure secret management in production
DEEPSEEK_API_KEY=your-secure-api-key-here-change-immediately
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=4096
DEEPSEEK_TEMPERATURE=0.7
DEEPSEEK_TIMEOUT_SECONDS=60
DEEPSEEK_RETRY_ATTEMPTS=3
DEEPSEEK_RATE_LIMIT_PER_MINUTE=60

# Server Configuration
HOST=127.0.0.1
PORT=8080
WORKERS=4
TIMEOUT_SECONDS=30
MAX_CONNECTIONS=1000

# Performance Optimization Configuration
CONNECTION_POOL_SIZE=10
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_MS=30000
ROUTING_TIMEOUT_MS=100
FILE_PROCESSING_CONCURRENCY=8
ENABLE_REQUEST_DEDUPLICATION=true
ENABLE_STREAMING=true

# Caching Configuration (5-minute TTL for blazing fast responses)
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
CACHE_MAX_ENTRIES=1000
CACHE_RESPONSE_BODIES=true
CACHE_FILE_CONTENTS=true
CACHE_INVALIDATION_STRATEGY=ttl

# Circuit Breaker Configuration (Netflix Hystrix pattern)
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
CIRCUIT_BREAKER_HALF_OPEN_MAX_CALLS=3
CIRCUIT_BREAKER_TIMEOUT_MS=5000

# Legacy settings (maintained for compatibility)
DEEPSEEK_TIMEOUT=30000
DEEPSEEK_MAX_FILE_SIZE=10485760
DEEPSEEK_CHUNK_SIZE=8000
DEEPSEEK_IP_STRATEGIES=wsl_host,veth,gateway,common
DEEPSEEK_IP_CACHE_TTL=300000
ENABLE_OFFLINE_MODE=true
FALLBACK_RESPONSE_ENABLED=true

# Logging
LOG_LEVEL=debug
