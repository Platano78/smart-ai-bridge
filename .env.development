# Development Environment Configuration
# DeepSeek MCP Bridge - Development Settings

# Environment
NODE_ENV=development
RUST_ENV=development

# Server Configuration
HOST=127.0.0.1
PORT=8080
WORKERS=2
TIMEOUT_SECONDS=30
MAX_CONNECTIONS=100
RUST_LOG=debug

# DeepSeek API Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=4096
DEEPSEEK_TEMPERATURE=0.7
DEEPSEEK_TIMEOUT_SECONDS=60
DEEPSEEK_RETRY_ATTEMPTS=3
DEEPSEEK_RATE_LIMIT_PER_MINUTE=60

# Development Features
DEBUG_MODE=true
DETAILED_LOGGING=true
CORS_ENABLED=true

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
COLLECT_DETAILED_METRICS=true

# Health Check Configuration  
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Legacy Node.js Compatibility (for transition)
DEEPSEEK_TIMEOUT=120000
DEEPSEEK_COMPLEX_TIMEOUT=240000
DEEPSEEK_MAX_REQUEST_SIZE=100000
ENABLE_OFFLINE_MODE=true
ENABLE_DEBUG_LOGGING=true
ENABLE_VERBOSE_ERRORS=true
ALLOW_LOCALHOST=true
ENABLE_CORS_DEBUG=true
DEEPSEEK_IP_CACHE_TTL=30000
FALLBACK_RESPONSE_ENABLED=true
CACHE_RESPONSES=false
ENABLE_MOCK_RESPONSES=true
LOG_LEVEL=debug
