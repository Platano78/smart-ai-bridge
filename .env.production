# Production Environment Configuration
# DeepSeek MCP Bridge - Production Settings

# Environment
NODE_ENV=production
RUST_ENV=production

# Server Configuration
HOST=0.0.0.0
PORT=8080
WORKERS=8
TIMEOUT_SECONDS=60
MAX_CONNECTIONS=2000
RUST_LOG=info

# DeepSeek API Configuration
DEEPSEEK_API_KEY=${DEEPSEEK_API_KEY}
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=8192
DEEPSEEK_TEMPERATURE=0.7
DEEPSEEK_TIMEOUT_SECONDS=120
DEEPSEEK_RETRY_ATTEMPTS=5
DEEPSEEK_RATE_LIMIT_PER_MINUTE=120

# Production Security
DEBUG_MODE=false
DETAILED_LOGGING=false
CORS_ENABLED=false

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
COLLECT_DETAILED_METRICS=false

# Health Check Configuration
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=30

# Production Optimization
ENABLE_COMPRESSION=true
CONNECTION_POOLING=true
CACHE_TTL=300
MAX_PAYLOAD_SIZE=10485760

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/var/log/deepseek-mcp-bridge.log
LOG_ROTATION=daily
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Legacy Node.js Compatibility (for transition)
DEEPSEEK_TIMEOUT=120000
DEEPSEEK_COMPLEX_TIMEOUT=180000
DEEPSEEK_MAX_REQUEST_SIZE=50000
ALLOW_LOCALHOST=false
ENABLE_CORS_DEBUG=false
ENABLE_DEBUG_LOGGING=false
ENABLE_VERBOSE_ERRORS=false
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_TIMEOUT=30000
CIRCUIT_BREAKER_HALF_OPEN_MAX_CALLS=1
DEEPSEEK_IP_CACHE_TTL=900000
ENABLE_OFFLINE_MODE=false
FALLBACK_RESPONSE_ENABLED=true
CACHE_RESPONSES=true
ENABLE_MOCK_RESPONSES=false
LOG_LEVEL=error
