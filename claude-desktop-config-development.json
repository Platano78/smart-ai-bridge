{
  "mcpServers": {
    "deepseek-mcp-bridge-dev": {
      "command": "./target/debug/deepseek-mcp-bridge",
      "args": ["--env", "development", "--port", "8080", "--debug"],
      "env": {
        "DEEPSEEK_API_KEY": "your_deepseek_api_key_here",
        "RUST_LOG": "debug",
        "HOST": "127.0.0.1",
        "PORT": "8080",
        "DEBUG_MODE": "true"
      }
    }
  },
  "global": {
    "logging": {
      "level": "debug",
      "console": true
    },
    "timeout": 60000,
    "retries": 5,
    "development": true
  }
}