{
  "test_configuration": {
    "name": "YoutAgent File System Test Suite",
    "version": "1.0.0",
    "description": "Comprehensive testing configuration for YoutAgent TDD implementation",
    "test_scenarios": [
      {
        "name": "Single File Analysis",
        "type": "unit",
        "files": ["sample-javascript.js"],
        "expected_results": {
          "success": true,
          "content_validation": "JavaScript code detected",
          "file_count": 1
        }
      },
      {
        "name": "Multiple Files Analysis",
        "type": "integration",
        "files": ["sample-javascript.js", "sample-python.py", "config.json"],
        "expected_results": {
          "success": true,
          "file_count": 3,
          "supported_extensions": [".js", ".py", ".json"]
        }
      },
      {
        "name": "Directory Analysis",
        "type": "system",
        "directories": ["./", "./nested-directory/"],
        "patterns": ["*.js", "*.py", "*.json"],
        "expected_results": {
          "recursive_scan": true,
          "pattern_filtering": true,
          "directory_traversal": true
        }
      },
      {
        "name": "WSL Path Compatibility",
        "type": "compatibility",
        "test_paths": [
          "C:\\Users\\Test\\file.js",
          "/mnt/c/Users/Test/file.js",
          "./relative/path/file.py",
          "/absolute/path/file.json"
        ],
        "expected_behavior": "path_normalization"
      },
      {
        "name": "Security Validation",
        "type": "security",
        "malicious_paths": [
          "../../../etc/passwd",
          "..\\..\\Windows\\System32",
          "/etc/shadow",
          "file.exe"
        ],
        "expected_behavior": "rejection"
      }
    ],
    "performance_benchmarks": {
      "max_file_size": "10MB",
      "max_concurrent_reads": 5,
      "supported_extensions": [".js", ".ts", ".py", ".md", ".json", ".txt"],
      "security_features": [
        "directory_traversal_protection",
        "file_size_validation",
        "extension_filtering",
        "path_normalization"
      ]
    }
  }
}